<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="select.system.dao.MyTransactionMapper">
    <resultMap id="MyTransactionMap" type="select.system.dto.MyTransaction">
        <id property="id" column="id"/>
        <result property="reason" column="reason"/>
        <result property="amount" column="amount"/>
        <result property="transDate" column="transDate"/>

        <!-- Define associations with senderAccount and receiverAccount -->
        <association property="senderAccount">
            <result property="accountNumber" column="sender_accountNumber" javaType="int"/>
            <!-- Define other properties for the senderAccount object -->
        </association>

        <association property="receiverAccount">
            <result property="accountNumber" column="receiver_accountNumber" javaType="int"/>
            <!-- Define other properties for the receiverAccount object -->
        </association>
    </resultMap>

    <select id="selectById" resultType="MyTransaction">
        SELECT *
        FROM MyTransaction
        WHERE id = #{id}
    </select>

    <!-- Define other SQL statements for MyTransaction as needed -->
</mapper>
