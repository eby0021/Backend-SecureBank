<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="select.system.dao.MyTransactionMapper">
    <resultMap id="MyTransactionMap" type="select.system.dto.MyTransaction">
        <id property="id" column="id"/>
        <result property="reason" column="reason"/>
        <result property="amount" column="amount"/>
        <result property="transDate" column="transDate"/>
        <!-- Add other fields here -->

        <!-- Define associations with senderAccount and receiverAccount -->
        <association property="senderAccount" column="sender_accountNumber">
            <resultMap property="senderAccount" type="select.system.dto.Account"/>
        </association>

        <association property="receiverAccount" column="receiver_accountNumber">
            <resultMap property="receiverAccount" type="select.system.dto.Account"/>
        </association>
    </resultMap>

    <select id="selectById" resultType="MyTransaction">
        SELECT *
        FROM MyTransaction
        WHERE id = #{id}
    </select>

    <!-- Define other SQL statements for MyTransaction as needed -->
</mapper>
